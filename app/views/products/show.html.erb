<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@product.image, style: "height: 100px;") %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>
</p>

<p>
  <strong>Price retail:</strong>
  <%= @product.price_retail %>
</p>

<p>
  <strong>Currency iso:</strong>
  <%= @product.currency_iso %>
</p>

<p>
  <strong>Url:</strong>
  <%= link_to 'Buy', @product.url, target: :_blank %>
</p>
<ul>
  <% @reviews.each  do |review| %>
  <li> 
    <p class="user-name"></p> 
    <p><%= review.description %></p>
  </li>
  <% end %>
</ul> 

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
